<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <TextView
        android:id="@+id/msgTextR"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="10.0dip"
        android:text=" "
        android:textSize="16.0dip" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/msgTextR"
        android:layout_marginTop="10.0dip"
        android:text="第一步：请输入手机号"
        android:textSize="16.0dip" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/textView10"
        android:layout_marginTop="10.0dip"
        android:text="手机号："
        android:textSize="16.0dip" />

    <EditText
        android:id="@+id/mobileNumberRegister"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/textView11"
        android:layout_toRightOf="@id/textView11"
        android:ems="10"
        android:inputType="phone"
        android:textSize="16.0dip" />

    <TextView
        android:id="@+id/textView13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView11"
        android:layout_marginTop="30.0dip"
        android:text="第二步："
        android:textSize="16.0dip" />

    <Button
        android:id="@+id/smsButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/textView13"
        android:layout_marginLeft="5.0dip"
        android:layout_toRightOf="@id/textView13"
        android:text="点击获取短信验证码" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView13"
        android:layout_marginTop="30.0dip"
        android:text="短信验证码："
        android:textSize="16.0dip" />

    <EditText
        android:id="@+id/verificationNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/textView12"
        android:layout_below="@id/smsButton"
        android:layout_toRightOf="@id/textView12"
        android:ems="10"
        android:inputType="number" />

    <TextView
        android:id="@+id/textView14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView12"
        android:layout_marginTop="30.0dip"
        android:text="第三步：请输入密码"
        android:textSize="16.0dip" />

    <TextView
        android:id="@+id/textView15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/textView14"
        android:layout_marginTop="10.0dip"
        android:text="密码："
        android:textSize="16.0dip" />

    <EditText
        android:id="@+id/newPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/textView15"
        android:layout_toRightOf="@id/textView15"
        android:ems="10"
        android:inputType="textPassword"
        android:textSize="16.0dip" />

    <Button
        android:id="@+id/RegisterButton"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView15"
        android:layout_marginTop="30.0dip"
        android:text="确认"
        android:textSize="20.0dip" />
</RelativeLayout>